#!/bin/bash
#Проверяем, есть ли параметр(файл)
#Если есть, присваиваем имя файла, переменной
#Если нет, то считаем файл со стандартного потока ввода
#Необходимо доработать ввод со стандартного потока(6-14 строки)
if [ $# -eq 1 ]
then
file=$1
else
echo "incorrect parameter"
echo "exit"
exit
fi
echo "$1"

#Выводим файл в битовом представлении по октетам
xxd -b $1 1>xxdoutput

#Фильтруем вывод xxd - убираем заголовки строк и окончания, только октеты в строках оставляем
xxd -b $1 |
sed 's/^.\{10\}//g' |
sed 's/.\{8\}$//g' 1>xxdfiltered

#Ниже мусор
